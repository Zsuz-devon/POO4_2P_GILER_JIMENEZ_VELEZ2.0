<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedalleroActivity">

    <LinearLayout
        android:id="@+id/medalleroLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:padding="25dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            app:srcCompat="@drawable/_024_summer_olympics_text_logo_svg" />

        <TextView
            android:id="@+id/medalleroText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/medalleroOlimpico"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bordenar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bordenarOro" />

        <TableLayout
            android:id="@+id/medallasLayout"
            android:layout_width="wrap_content"
            android:layout_height="402dp"
            android:baselineAligned="true"
            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:orientation="horizontal"
            android:stretchColumns="1">


        </TableLayout>

        <Button
            android:id="@+id/bvolverM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="volver"
            android:text="@string/volver" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>